<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <h3 class="text-danger"><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
          </ul>
      <% end %>

      <div class="form-group">
      <%= form_with(model:@user,local:true) do |f| %>
        <label for="user_name">Name</label>
        <%= f.text_field:name,autofocus:true,id:"user_name",class:"form-control mb-3" %>
        <label for="user_image">Image</label><br>
        <%= f.file_field:profile_image,accept:"image/*",class:"mb-3" %><br>
        <label for="user_introduction">Introduction</label>
        <%= f.text_area:introduction,id:"user_introduction",class:"form-control mb-3" %>
        <%= f.submit "Update User",class:"btn btn-secondary" %>
      <% end %>
      </div>
    </div>
  </div>
</div>