<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
        <h3 class="text-danger"><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-group">
      <%= form_with(model:@book,local:true) do |f| %>
        <label for="book_title">Title</label>
        <%= f.text_field:title,autofocus:true,id:"book_title",class:"form-control mb-3" %>
        <label for="book_opinion">Opinion</label>
        <%= f.text_area:body,id:"book_body",class:"form-control mb-3" %>
        <%= f.submit "Update Book",class:"btn btn-success" %>
      <% end %>
      </div>
      <%= link_to "Show",book_path(@book.id) %> | <%= link_to "Back",books_path %>
    </div>
  </div>
</div>